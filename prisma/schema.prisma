datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// üè™ Tenants (las tiendas) - Base del sistema multitenant
model Tenant {
  id        String   @id @default(uuid())
  name      String
  plan      String   @default("free")
  active    Boolean  @default(true)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  users          User[]
  products       Product[]
  stockMovements StockMovement[]
  sales          Sale[]

  @@map("tenants")
}

// üë• Usuarios - Scoped a tenant
model User {
  id       String @id @default(uuid())
  tenantId String @map("tenant_id")
  name     String
  email    String @unique // Email √∫nico globalmente
  password String
  role     Role   @default(SELLER)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  sales  Sale[]

  @@index([tenantId])
  @@map("users")
}

// üì¶ Productos - Scoped a tenant
model Product {
  id       String  @id @default(uuid())
  tenantId String  @map("tenant_id")
  name     String
  sku      String
  price    Int
  active   Boolean @default(true)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  tenant   Tenant           @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  variants ProductVariant[]

  @@unique([tenantId, sku])
  @@index([tenantId])
  @@map("products")
}

// üëï Variantes de producto
model ProductVariant {
  id        String @id @default(uuid())
  productId String @map("product_id")
  size      String
  color     String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  product        Product         @relation(fields: [productId], references: [id], onDelete: Cascade)
  stock          Stock?
  stockMovements StockMovement[]
  saleItems      SaleItem[]

  @@unique([productId, size, color])
  @@index([productId])
  @@map("product_variants")
}

// üìä Stock
model Stock {
  id               String @id @default(uuid())
  productVariantId String @unique @map("product_variant_id")
  quantity         Int    @default(0)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  productVariant ProductVariant @relation(fields: [productVariantId], references: [id], onDelete: Cascade)

  @@map("stock")
}

// üîÅ Movimientos de stock - Scoped a tenant
model StockMovement {
  id               String            @id @default(uuid())
  tenantId         String            @map("tenant_id")
  productVariantId String            @map("product_variant_id")
  type             StockMovementType
  quantity         Int

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  tenant         Tenant         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  productVariant ProductVariant @relation(fields: [productVariantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([productVariantId])
  @@map("stock_movements")
}

// üßæ Ventas - Scoped a tenant
model Sale {
  id       String @id @default(uuid())
  tenantId String @map("tenant_id")
  userId   String @map("user_id")
  total    Int

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  tenant Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items  SaleItem[]

  @@index([tenantId])
  @@index([userId])
  @@map("sales")
}

// üßæ Items de venta
model SaleItem {
  id               String @id @default(uuid())
  saleId           String @map("sale_id")
  productVariantId String @map("product_variant_id")
  quantity         Int
  price            Int

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  sale           Sale           @relation(fields: [saleId], references: [id], onDelete: Cascade)
  productVariant ProductVariant @relation(fields: [productVariantId], references: [id], onDelete: Cascade)

  @@index([saleId])
  @@index([productVariantId])
  @@map("sale_items")
}

enum Role {
  OWNER
  SELLER
}

enum StockMovementType {
  IN
  OUT
}
