DATABASE_URL="postgresql://user:password@localhost:5432/database"
SECRET_KEY=your_secret_key_here
DEBUG=True
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# OpenRouter
OPENROUTER_API_KEY=
OPENROUTER_MODEL=openai/gpt-4o-mini
OPENROUTER_HTTP_REFERER=http://localhost:3000
OPENROUTER_APP_NAME=tienda-api

# Opcional: resiliencia ante rate-limit (429)
# Lista separada por comas de modelos alternativos a probar si el principal está limitado.
OPENROUTER_FALLBACK_MODELS=openai/gpt-4o-mini,google/gemini-2.0-flash-lite
# Reintentos por modelo (además del primer intento). Ej: 2 = hasta 3 intentos.
OPENROUTER_MAX_RETRIES=2
# Delay base (ms) para exponential backoff.
OPENROUTER_RETRY_DELAY_MS=400
